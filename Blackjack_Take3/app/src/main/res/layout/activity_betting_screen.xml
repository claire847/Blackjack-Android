<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tablebackground"
    tools:context="clairehofmann.blackjack_take2.BettingScreen">

    <ImageButton
        android:id="@+id/v_bs_dealBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="42dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/deal" />

    <ImageButton
        android:id="@+id/v_bs_resetBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/reset" />

    <ImageButton
        android:id="@+id/v_bs_fiveHundredBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="40dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_bs_oneHundredBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bluechip" />

    <ImageButton
        android:id="@+id/v_bs_oneHundredBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="2dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_bs_tenBtn"
        app:layout_constraintStart_toEndOf="@+id/v_bs_fiveHundredBtn"
        app:srcCompat="@drawable/greenchip" />

    <ImageButton
        android:id="@+id/v_bs_tenBtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="42dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_bs_oneHundredBtn"
        app:srcCompat="@drawable/redchip" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="27dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/v_bs_betTxtView"
        app:layout_constraintEnd_toStartOf="@+id/v_bs_dealBtn"
        app:layout_constraintStart_toEndOf="@+id/v_bs_resetBtn"
        app:srcCompat="@drawable/betchip" />

    <TextView
        android:id="@+id/v_bs_currentPlayer"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/v_bs_cashTxtView"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/v_bs_currentPlayer" />

    <TextView
        android:id="@+id/v_bs_betTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="67dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/v_bs_oneHundredBtn"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView14" />

    <ImageButton
        android:id="@+id/v_bs_allInBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="154dp"
        android:layout_marginStart="155dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/allin" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="54dp"
        android:text="RESET"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/v_bs_fiveHundredBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="60dp"
        android:text="DEAL"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/v_bs_tenBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="171dp"
        android:layout_marginStart="172dp"
        android:text="ALL IN"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_bs_currentPlayer"
        app:srcCompat="@drawable/chipoutline" />

    <ImageButton
        android:id="@+id/v_bs_exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_delete" />

</android.support.constraint.ConstraintLayout>
