<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainbow"
    tools:context="clairehofmann.blackjack_take2.AdminEditInfo"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/v_aei_emailTxtView"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:text="* Email address cannot be updated."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="163dp"
        android:layout_height="313dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_aei_emailTxtView">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:text="PASSWORD:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:text="FIRST NAME:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="195dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:text="LAST NAME:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="253dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:text="ADMIN:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="304dp" />

        <TextView
            android:id="@+id/TextView6"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:text="CASH:"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="359dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="220dp"
        android:layout_height="343dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_aei_emailTxtView">

        <EditText
            android:id="@+id/v_aei_passEditText"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Enter new password"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="87dp"
            tools:layout_editor_absoluteY="143dp" />

        <EditText
            android:id="@+id/v_aei_fNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Enter new first name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="195dp" />

        <EditText
            android:id="@+id/v_aei_lNameEditText"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Enter new last name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="253dp" />

        <EditText
            android:id="@+id/v_aei_adminEditText"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Enter new admin status"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="289dp" />

        <EditText
            android:id="@+id/v_aei_cashEditText"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="Enter new cash amount"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="369dp" />

    </LinearLayout>

    <Button
        android:id="@+id/v_aei_cancelBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/v_aei_updateBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@+id/v_aei_cancelBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
